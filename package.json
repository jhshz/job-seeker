{
  "name": "job-seeker",
  "version": "1.0.0",
  "private": true,
  "description": "Job seeker MERN stack monorepo application",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "node -e \"const fs=require('fs');['packages/frontend/node_modules','packages/backend/node_modules'].forEach(p=>{try{fs.rmSync(p,{recursive:true,force:true});}catch(_){}})\"",
    "prepare": "husky install",
    "dev": "concurrently \"yarn dev:backend\" \"yarn dev:frontend\"",
    "dev:backend": "yarn workspace @job-seeker/backend dev",
    "dev:frontend": "yarn workspace @job-seeker/frontend dev",
    "build": "yarn workspaces foreach -A run build",
    "build:backend": "yarn workspace @job-seeker/backend build",
    "build:frontend": "yarn workspace @job-seeker/frontend build",
    "lint": "yarn workspaces foreach -A run lint",
    "lint:backend": "yarn workspace @job-seeker/backend lint",
    "lint:frontend": "yarn workspace @job-seeker/frontend lint",
    "clean": "yarn workspaces foreach -A run clean && rm -rf node_modules",
    "outdated": "yarn outdated",
    "audit": "yarn audit",
    "audit:fix": "yarn audit --fix"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.39.2",
    "husky": "^6.0.0",
    "typescript": "^5.9.3",
    "vite": "7.2.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=4.0.0"
  },
  "packageManager": "yarn@4.12.0",
  "resolutions": {
    "vite": "npm:rolldown-vite@7.2.5"
  }
}
